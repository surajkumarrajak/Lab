pipeline{
    agent any
    stages {
        stage ('initialize'){
            steps {
                sh '''
                    echo "Initializing"
                ''' 
            }
        }
        stage ('Build Application') {
            steps {
                sh 'mvn clean package'
                sh """
                echo "Building Artefacts"
                """
            }
            post {
                success {
                    echo "Now archiving the artifacts"
                    archiveArtifacts artifacts: '**/*.jar'
                }
            }
        }
    }
}
